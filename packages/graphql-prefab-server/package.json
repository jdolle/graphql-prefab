{
  "name": "graphql-prefab-server",
  "version": "0.2.1",
  "description": "A language-agnostic, standalone GraphQL server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "graphql",
    "resolver",
    "apollo",
    "json",
    "config",
    "gql"
  ],
  "repository": "https://github.com/jdolle/graphql-prefab",
  "author": "Jeff Dolle (jdolle@gmail.com)",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/* && tsc",
    "lint": "tslint --project tsconfig.json --format stylish \"src/**\"",
    "test": "jest --no-watchman"
  },
  "devDependencies": {
    "@types/node": "10.0.4",
    "@types/ws": "^6.0.0",
    "jest": "^22.4.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.0",
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.13.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "graphql-import": "^0.7.1",
    "graphql-prefab-resolvers": "^0.2.1",
    "graphql-yoga": "^1.14.7",
    "tslib": "^1.9.2"
  },
  "jest": {
    "cacheDirectory": "jestCache",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 85
      }
    }
  }
}
