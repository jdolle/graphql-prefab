{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "$src/*": ["./*"],
      "$lib/*": ["./lib/*"]
    },
    "outDir": "./dist",
    "target": "ES6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "examples"
  ]
}
